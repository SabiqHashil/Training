@model StudentDto

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Job Application</h2>

        <form method="post" enctype="multipart/form-data">
            <!-- Name -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Name" type="text" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <!-- Email -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Email" type="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <!-- Phone -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Phone</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Phone" type="tel" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <!-- Date of Birth -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Date of Birth</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="DOB" type="date" />
                    <span asp-validation-for="DOB" class="text-danger"></span>
                </div>
            </div>


            <!-- Photo -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Photo</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Photo" type="file" accept=".jpg,.jpeg,.png" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                    <small class="text-muted">Accepted formats: JPG, JPEG, PNG only</small>
                </div>
            </div>

            <!-- Resume -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Resume</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Resume" type="file" accept=".pdf" />
                    <span asp-validation-for="Resume" class="text-danger"></span>
                    <small class="text-muted">Accepted format: PDF only</small>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid text-center">
                    <button type="submit" class="btn btn-primary">Submit Application</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Students" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
